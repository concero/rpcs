{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": ".",
    "types": ["node"],
    "lib": ["es2020"],
    "paths": {
      "@concero/contract-utils": ["./node_modules/@concero/contract-utils"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
